<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RadioButtons">

    <TextView
        android:id="@+id/FlagText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"

        android:hint="Flag" />


    <TextView
        android:id="@+id/qa"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:hint="Flag"
        android:text="q1: Any Question ?" />

    <RadioGroup
        android:id="@+id/rd1grp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ans1Id"
            android:text="Ans 1"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ans2Id"
            android:text="Ans 2"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ans3Id"
            android:text="Ans 3"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ans4Id"
            android:text="Ans 4"
            />


    </RadioGroup>


    <TextView
        android:id="@+id/qa2"
        android:layout_width="216dp"
        android:layout_height="wrap_content"

        android:hint="Flag"
        android:text="q2: Any Question ?" />

    <RadioGroup
        android:id="@+id/rd2grp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ans1BId"
            android:text="Ans 1"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ans2BId"
            android:text="Ans 2"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ans3IBd"
            android:text="Ans 3"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ans4IBd"
            android:text="Ans 4"
            />


    </RadioGroup>


    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rdSubmitBtn"
    android:text="Submit"
    />

    <TextView
        android:id="@+id/ansOutputTxt"
        android:layout_width="218dp"
        android:layout_height="35dp"
        android:hint="Result" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nextButton"
        android:text="Next Activity"
        />


</LinearLayout>